@model IEnumerable<Locadora.Filmes.Web.ViewModels.Album.AlbumIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-10">
       <input type="text" id="pesquisaAlbum" class="form-control" />
    </div> 
    <div class="col-md-2">
       <button id="btnPesquisarAlbum">Pesquisar</button>
    </div>
 </div>

<table class="table" id="listaAlbuns">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody id="listaAlbunsBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $('#btnPesquisarAlbum').on('click', function filtrarPorNome() {
            $.ajax({
                url: "/albuns/filtrarpornome/",
                data: { pesquisa: $("#pesquisaAlbum").val() },
                type: "get",
                dataType: "json",
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $("#listaAlbunsBody").empty();
                    $("#listaAlbuns").append("erro");
                },
                success: function (data, textStatus, XMLHttpREquest) {
                    $("#listaAlbunsBody").empty();
                    var trHTML = '';
                    $.each(data, function (i, album) {
                        trHTML += '<tr><td>' +
                            album.Nome + '</td><td>' +
                            album.Ano + '</td><td>' +
                            album.Descricao + '</td><td>' +
                            album.Autor + '</td><td>' +
                            album.Email + '</td><td>' +
                            "<a href='/Albuns/Edit/" + album.Id + "'>Editar</a>" + " | " +
                            "<a href='/Albuns/Details/" + album.Id + "'>Detalhar</a>" + " | " +
                            "<a href='/Albuns/Delete/" + album.Id + "'>Excluir</a>" + " | " +
                            '</td></tr>';
                    })
                    $("#listaAlbuns").append(trHTML)
                }
            })
        })
    </script>
}
